<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><h1>Alcamala</h1></a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <ElysiumIcon Icon="@Icon.List_Bullets" /> @AppResources.Lists
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="drinks">
                <ElysiumIcon Icon="@Icon.Cup_Straw" /> @AppResources.Drinks
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weight">
                <ElysiumIcon Icon="@Icon.Heart_Pulse" /> @AppResources.Weight
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="notes">
                <ElysiumIcon Icon="@Icon.Journal_Text" /> @AppResources.Notes
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="profile">
                <ElysiumIcon Icon="@Icon.Person" /> @AppResources.Profile
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}